<%= form_for(@achievement) do |f| %>
  <% if @achievement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

      <ul>
      <% @achievement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :headline %><br />
    <%= f.text_field :headline %>
  </div>
  
  <% if user_signed_in? %>
    Signed in as: <%= current_user.email %> with id: <%= current_user.id %>. </br>
    This user's portfolio id is <%= current_user.portfolio.id %>
  
    <!-- Portfolio Id: <%= @portfolio_id %>  --> 
  <% end %>
 
  <%= f.hidden_field :notes, :value => current_user.email %>
  <%= f.hidden_field :portfolio_id, :value => current_user.portfolio.id %>

  <div class="field" >
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :order=> [:month, :day, :year] %>
  </div>
  <div class="field" >
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, :order=> [:month, :day, :year] %>
  </div>
   <div class="field" >
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => '40x10' %>
  </div>
 <div class="field">

  <%= f.label :work_to_upload %>
  <input type = "button" id = "switchBox"  value ="Switch between file upload and url entry"></input>
  <div id = "work_file"  ><%= f.file_field :work, :disabled => false%></br></div>


</div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
