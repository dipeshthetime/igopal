<h1>Listing portfolios</h1>

<table class = "table">
  <tr>
    <th>User Name</th>
    <th>Portfolio Title</th>
    <th>Portfolio Id</th>
    <th>Type</th>
    <th>Start Date</th>
    <th>Introduction</th>
    <th>Featured Image</th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.user.first_name %> <%= portfolio.user.last_name %> with id of: <%= portfolio.user.id %></td>
    <td><%= portfolio.title %></td>
    <td><%= portfolio.id %></td>
      <td><%= portfolio.variety %></td>   
      <td><%= portfolio.start_date%></td>    
      <td><%= portfolio.intro %></td>
      <td><%= image_tag portfolio.image.url(:tiny) %></td>
    <td><%= link_to 'Show', portfolio  %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

