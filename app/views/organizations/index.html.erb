<center><h2>Organizations</h2></center>

<table class="table">
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>URL</th>
    <th>Logo</th>
    <th>Cover</th>

  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.user_id %></td>
    <td><%= organization.name %></td>
    <td><%= organization.address %></td>
    <td><%= organization.city %></td>
    <td><%= organization.state %></td>
    <td><%= organization.zip %></td>
    <td><%= organization.url %></td>
    <td><%= image_tag organization.logo.url(:tiny) %></td>
    <td><%= image_tag organization.cover.url(:tiny) %></td>
    <td><%= link_to 'Show', organization %></td>
  </tr>
<% end %>
</table>

<br />
<% if current_user.role_ids == [2] %>
    <%= link_to 'New Organization', new_organization_path %>
<% end %>



